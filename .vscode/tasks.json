{
    "version": "2.0.0",
    "tasks": [
         {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/CyFinance.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "BuildTests",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/tests/CyFinance.Tests.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "RunTests",
            "dependsOn": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/tests/CyFinance.Tests.csproj"
            ],
            "problemMatcher": []
        }
    ]
}